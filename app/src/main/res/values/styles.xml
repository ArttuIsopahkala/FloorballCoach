<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/color_text_light</item>
        <item name="colorControlActivated">@color/color_text_light_secondary</item>
        <item name="colorControlHighlight">@color/color_text_light_secondary</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerText</item>
        <item name="android:radioButtonStyle">@style/myRadioButtonStyle</item>
        <item name="android:textViewStyle">@style/myTextView</item>
    </style>

    <style name="myTextView" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/color_text_light</item>
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="colorControlNormal">@color/color_text_light</item>
        <item name="colorControlActivated">@color/color_text_light</item>
        <item name="backgroundTint">@color/color_text_light</item>
    </style>
    <style name="CheckBoxStyle" parent="AppTheme">
        <item name="colorAccent">@color/color_text_light</item>
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:background">@color/color_background_third</item>
    </style>
    <style name="mySpinnerText" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/color_text_light</item>
    </style>
    <style name="myRadioButtonStyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="colorAccent">@color/color_text_light</item>
    </style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/color_text_light</item>
        <item name="colorControlNormal">@color/color_text_light</item>
    </style>
</resources>
