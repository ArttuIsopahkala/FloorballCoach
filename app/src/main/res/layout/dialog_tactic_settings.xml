<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curve_shape"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fieldHalfLeftPicture"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/floorball_field_rotated" />

        <ImageView
            android:id="@+id/fieldFullPicture"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/floorball_field" />

        <ImageView
            android:id="@+id/fieldHalfRightPicture"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="5dp"
            android:rotation="180"
            android:scaleType="fitCenter"
            android:src="@drawable/floorball_field_rotated" />

    </LinearLayout>

    <View
        android:id="@+id/colorPreview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle"
        android:visibility="invisible" />

    <SeekBar
        android:id="@+id/colorPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="1650" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:background="@drawable/button_background"
        android:text="@string/save"
        android:textColor="@color/color_text_light"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>