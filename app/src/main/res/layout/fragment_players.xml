<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/createPlayerButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="@string/team_selection_add_player"
        android:textColor="@color/color_text_light" />

    <TextView
        android:id="@+id/noPlayersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createPlayerButton"
        android:layout_marginTop="20dp"
        android:background="@color/color_menu"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/players_no_players"
        android:textColor="@color/color_text_light"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/playerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/createPlayerButton"
        android:layout_marginTop="20dp"
        android:divider="@null"
        android:dividerHeight="3dp" />
</RelativeLayout>