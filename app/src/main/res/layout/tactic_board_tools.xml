<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/animationToolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/playIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_play"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stopIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_stop"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pauseIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_pause"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/framesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/plusIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_plus"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/removeIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_remove"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/saveIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_save"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/downloadIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_download"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/galleryIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_gallery"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/penIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_pen"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/arrowIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_arrow_long"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dottedArrowIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_arrow_long"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/crossIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_close"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/circleIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_circle"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/eraserIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_eraser"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/usersIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:layout_marginStart="10dp">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_users"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ballIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/floorball_icon"
                    android:tint="@color/color_text_light"
                    android:padding="3dp"
                    android:clickable="false"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/undoIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:layout_marginStart="10dp">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_undo"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/clearIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_remove"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/settingsIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_settings"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/moveIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_move"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="20sp"
                    android:padding="3dp"
                    android:clickable="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>