<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">
    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_menu"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/lineup_title"
        android:textColor="@color/color_text_light"
        android:textSize="15sp" />
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_below="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/analyzeChemistryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="@string/lineup_analyze"
            android:textColor="@color/color_text_light"/>
        <Button
            android:id="@+id/getBestLinesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="@string/lineup_best_lines"
            android:textColor="@color/color_text_light" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/teamChemistryContainer"
        android:layout_below="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/color_background">
        <TextView
            android:id="@+id/teamChemistryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/lineup_team_chemistry"
            android:textColor="@color/color_text_light"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/teamChemistryValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/teamChemistryBar"
            android:layout_marginEnd="20dp"
            android:text="0"
            android:textColor="@color/color_text_light"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/teamChemistryBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_centerVertical="true"
            android:max="100"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <com.ardeapps.floorballmanager.views.LineUpSelector
        android:id="@+id/lineUpSelector"
        android:layout_below="@+id/teamChemistryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineUpSelector"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:text="@string/save"
        android:textColor="@color/color_text_light" />
</RelativeLayout>