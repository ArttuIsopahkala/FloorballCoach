<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_background"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_third"
            android:padding="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pictureImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/default_picture"/>
                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/pictureImage"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="Arttu Isopahkala"
                    android:textColor="@color/color_text_light"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <com.ardeapps.floorballcoach.views.IconView
                    android:id="@+id/editIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:padding="10dp"
                    android:background="@color/color_background_fourth"
                    android:text="@string/icon_edit"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="16sp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_player_position"
                        android:textColor="@color/color_text_light"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/positionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keskushyökkääjä"
                        android:textColor="@color/color_text_light"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_player_number"
                        android:textColor="@color/color_text_light"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/numberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textColor="@color/color_text_light"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_player_shoots"
                        android:textColor="@color/color_text_light"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/shootsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vasen"
                        android:textColor="@color/color_text_light"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/firstFiltersContainer"
            android:layout_below="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/gameSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:textColor="@color/color_text_light" />
            <Spinner
                android:id="@+id/gameModeSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:textColor="@color/color_text_light" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filtersContainer"
            android:layout_below="@+id/firstFiltersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/typeSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:textColor="@color/color_text_light" />
            <Spinner
                android:id="@+id/seasonSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:textColor="@color/color_text_light" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/shootmapContainer"
            android:layout_below="@+id/filtersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/shootmapImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/floorball_field_half"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
            <RelativeLayout
                android:id="@+id/shootmapPointsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>