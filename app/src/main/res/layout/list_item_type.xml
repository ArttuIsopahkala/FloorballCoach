<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="@string/add_player_type"
        android:textColor="@color/color_text_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:background="@color/color_background_third"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:background="@color/color_background_fourth">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strengths"
            android:textColor="@color/color_text_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/strengthsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strengths"
            android:textColor="@color/color_text_light"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weaknesses"
            android:textColor="@color/color_text_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/weaknessesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weaknesses"
            android:textColor="@color/color_text_light"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</LinearLayout>