<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_menu">
    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/penIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_pen"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lineIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_pen"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/arrowIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_arrow_long"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dottedArrowIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_arrow_long"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/crossIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_close"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/circleIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_circle"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false"/>
        </LinearLayout>
        <com.ardeapps.floorballmanager.views.IconView
            android:id="@+id/shareIcon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/icon_share"
            app:iconFont="@string/icon_solid"
            app:iconSize="18sp" />

        <com.ardeapps.floorballmanager.views.IconView
            android:id="@+id/settingsIcon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/icon_settings"
            app:iconFont="@string/icon_solid"
            app:iconSize="18sp" />

        <com.ardeapps.floorballmanager.views.IconView
            android:id="@+id/saveIcon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/icon_save"
            app:iconFont="@string/icon_solid"
            app:iconSize="18sp" />

        <com.ardeapps.floorballmanager.views.IconView
            android:id="@+id/galleryIcon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/icon_gallery"
            app:iconFont="@string/icon_solid"
            app:iconSize="18sp" />

        <TextView
            android:id="@+id/fieldNameText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_text_light"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/animationTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstRow"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/homePlayersIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_users"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/homeSettingsIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_settings"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/awayPlayersIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:layout_marginStart="10dp">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_users"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/awaySettingsIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center">
            <com.ardeapps.floorballmanager.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_settings"
                app:iconFont="@string/icon_solid"
                app:iconSize="15sp"
                android:clickable="false" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ballIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:layout_marginStart="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/floorball_icon"
                android:tint="@color/color_text_light"
                android:clickable="false"
                android:contentDescription="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <LinearLayout
                android:id="@+id/eraserIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_eraser"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/undoIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_undo"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/clearIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_remove"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>