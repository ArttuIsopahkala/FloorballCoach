<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background_third"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/nameContent"
        android:layout_width="220dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/positionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position_c_short"
            android:textColor="@color/color_text_light_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="-"
            android:textColor="@color/color_text_light"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/nameContent">

        <TextView
            android:id="@+id/plusMinusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="-4"
            android:textColor="@color/color_text_light"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/statsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="center"
            android:text="2 + 0"
            android:textColor="@color/color_text_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/penaltyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:gravity="center"
            android:text="20 min"
            android:textColor="@color/color_text_light"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>