<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/color_background_third">
    <LinearLayout
        android:id="@+id/nameContent"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/positionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position_c_short"
            android:textColor="@color/color_text_light_secondary"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Arttu Isopahkala"
            android:textColor="@color/color_text_light"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_toEndOf="@+id/nameContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/plusMinusText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="-4"
            android:textColor="@color/color_text_light"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/statsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 + 0"
            android:textColor="@color/color_text_light"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>