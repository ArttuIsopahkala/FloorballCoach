<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/fieldViewsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/animationTools"
        android:gravity="bottom">
        <LinearLayout
            android:id="@+id/notAddedPlayersContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"/>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/animationTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/usersIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_users"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ballIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/floorball_icon"
                    android:tint="@color/color_text_light"
                    android:clickable="false"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/undoIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_undo"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/clearIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_remove"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/playIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_play"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stopIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_stop"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pauseIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_pause"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/framesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/plusIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_plus"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/minusIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:gravity="center">
                <com.ardeapps.floorballmanager.views.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_minus"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp"
                    android:clickable="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/disableToolsOverlay"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_background_second"
            android:alpha="0.8" />
        <TextView
            android:id="@+id/disableToolsInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tactic_board_converting"/>
        <com.ardeapps.floorballmanager.views.IconView
            android:id="@+id/disableToolsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/icon_remove"
            app:iconFont="@string/icon_solid"
            app:iconSize="30sp" />
    </RelativeLayout>
</RelativeLayout>